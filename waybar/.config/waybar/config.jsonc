// -*- mode: jsonc -*-
{
  // "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  // "height": 20, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    // "idle_inhibitor",
    // "custom/media",
    "pulseaudio",
    "cpu",
    "memory",
    "custom/gpu-usage",
    "disk",
    "temperature",
    // "power-profiles-daemon",
    "network",
    // "keyboard-state",
    "backlight",
    "battery",
    "custom/clock-ordinal",
    "tray",
    "custom/powermenu"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{name}: {icon}",
    "format-icons": {
      "urgent": "ÔÅ™",
      "active": "ÔÜí",
      "default": "ÔÑë"
    }
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "hyprland/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "hyprland/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", "Ôãí"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  "cpu": {
    "format": "Ó∞ô  {usage}%",
    "on-double-click": "kitty btop --preset 1"
  },
  "memory": {
    "format": "ÓøÖ  {}%",
    "on-double-click": "kitty btop --preset 2"
  },
  "custom/gpu-usage": {
    "format": "{icon}  {text}",
    "exec": "gpu-usage-waybar --text-no-memory --interval 10000",
    "return-type": "json",
    "format-icons": "Óâ¶",
    "on-double-click": "kitty nvtop"
  },
  "disk": {
    "format": "ÔÇ†  {percentage_used}%",
    "on-double-click": "kitty btop",
    "tooltip-format": "Used: {used} / {total} ({percentage_used}%)\nFree: {free}"
  },
  "temperature": {
    "format": "Ôãâ  {temperatureC}¬∞C",
    "hwmon-path": "/sys/class/hwmon/hwmon5/temp1_input",
    "critical-threshold": 85,
    "interval": 5,
    "on-double-click": "kitty btop --preset 2"
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<span size='13000' foreground='#a6e3a1'>{icon} </span> {capacity}%",
    "format-warning": "<span size='13000' foreground='#B1E3AD'>{icon} </span> {capacity}%",
    "format-critical": "<span size='13000' foreground='#E38C8F'>{icon} </span> {capacity}%",
    "format-charging": "<span size='13000' foreground='#B1E3AD'>Ôá¶ </span>{capacity}%",
    "format-plugged": "<span size='13000' foreground='#B1E3AD'>Ôá¶ </span>{capacity}%",
    "format-alt": "<span size='13000' foreground='#B1E3AD'>{icon} </span> {time}",
    "format-full": "<span size='13000' foreground='#B1E3AD'>ÔÄÑ </span>{capacity}%",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "tooltip-format": "Capacity: {capacity}%\nTime Remaining: {time}\nHealth: {health}"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  "network": {
    "format-wifi": "Ôá´  {essid} ({signalStrength}%)",
    "format-ethernet": "Û∞≤ù  {ipaddr}",
    "tooltip-format": "Ôûñ  {ifname}: {ipaddr}/{cidr} via {gwaddr}",
    "format-linked": "Ôûñ  {ifname} (No IP)",
    "format-disconnected": "‚ö†  Disconnected",
    "on-double-click": "$HOME/.local/bin/copy-ip-to-clipboard"
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-muted": "Ó¨§",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "Û∞ïæ"]
    },
    "on-double-click": "pavucontrol"
  },
  "custom/media": {
    "format": "{icon}  {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/clock-ordinal": {
    "format": "ÔÄó  {}",
    "exec": "$HOME/.local/bin/clock-ordinal",
    "interval": 1,
    "tooltip": false,
    "on-double-click": "xdg-open https://calendar.google.com"
  },
  "custom/powermenu": {
    "format": "ÔÄë",
    "tooltip": false,
    "on-click": "$HOME/.local/bin/wofi-powermenu"
  }
}
